<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nice.mapper.ArticleMapper">
    <sql id="articleColumns">
        article_id,article_title,article_type,article_date,article_content,article_author,article_click_rate
    </sql>
    <select id="queryArticleAll" resultType="com.nice.model.Article">
      select <include refid="articleColumns"/> from article;
    </select>
    <select id="queryArticleTitleAll" resultType="java.lang.String">
        select article_title from article;
    </select>
    <select id="queryArticleByArticleTitle" resultType="com.nice.model.Article">
        select <include refid="articleColumns"/> from article where article_title=#{articleTitle};
    </select>
</mapper>